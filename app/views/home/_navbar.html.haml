%ul{class:"flex text-white bg-blue-800"}
  %li{class:"mr-6"}
    = link_to "Home", root_path, class: "hover:text-orange-300"
  %li{class:"mr-6"}
    = link_to "About Me", home_about_path, class: "hover:text-orange-300"
  - if user_signed_in?
    %li{class:"mr-6"}
      = link_to "Edit Profile", edit_user_registration_path, class: "hover:text-orange-300"
    %li{class:"mr-6"}
      = link_to "Sign Out", destroy_user_session_path, :method => :delete, class: "hover:text-orange-300"
  - else
    %li{class:"mr-6"}
      = link_to "Sign Up", new_user_registration_path, class: "hover:text-orange-300"
    %li{class:"mr-6"}
      = link_to "Sign In", new_user_session_path, class: "hover:text-orange-300"
