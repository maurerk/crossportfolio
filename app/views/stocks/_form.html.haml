= form_with(model: stock, local: true) do |form|
  - if stock.errors.any?
    %div{ id: "error_explanation" }
      %h2
        = pluralize(stock.errors.count, "error") + " prohibited this stock from being saved:"

      %ul
        - stock.errors.full_messages.each do |message|
          %li= message

  %div{ class: "field" }
    = form.label :ticker
    = form.text_field :ticker, id: :stock_ticker

  %div{ class: "field" }
    = form.number_field :user_id, id: :stock_user_id, value: current_user.id, type: :hidden

  %div{ class: "actions" }
    = form.submit
